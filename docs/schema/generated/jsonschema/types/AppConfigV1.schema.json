{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "AppConfigV1",
  "description": "User-facing app.yaml config file for apps.\n\nNOTE: only used by the backend; Edge itself does not use this format and\nrelies on the internal `AppVersionV1Spec` representation instead.",
  "type": "object",
  "properties": {
    "app_id": {
      "description": "App id assigned by the backend.\n\nThis will get populated once the app has been deployed.\n\nThis id is also used to map to the existing app during deployments.",
      "type": [
        "string",
        "null"
      ]
    },
    "capabilities": {
      "anyOf": [
        {
          "$ref": "#/$defs/AppConfigCapabilityMapV1"
        },
        {
          "type": "null"
        }
      ]
    },
    "cli_args": {
      "description": "Only applicable for runners that accept CLI arguments.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "debug": {
      "description": "Enable debug mode, which will show detailed error pages in the web gateway.",
      "type": [
        "boolean",
        "null"
      ]
    },
    "domains": {
      "description": "Domains for the app.\n\nThis can include both provider-supplied\nalias domains and custom domains.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "env": {
      "description": "Environment variables.",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "health_checks": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/$defs/HealthCheckV1"
      }
    },
    "jobs": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/$defs/Job"
      }
    },
    "locality": {
      "description": "Location-related configuration for the app.",
      "anyOf": [
        {
          "$ref": "#/$defs/Locality"
        },
        {
          "type": "null"
        }
      ]
    },
    "name": {
      "description": "Name of the app.",
      "type": [
        "string",
        "null"
      ]
    },
    "owner": {
      "description": "Owner of the app.\n\nThis is either a username or a namespace.",
      "type": [
        "string",
        "null"
      ]
    },
    "package": {
      "description": "The package to execute.",
      "$ref": "#/$defs/PackageSource"
    },
    "redirect": {
      "anyOf": [
        {
          "$ref": "#/$defs/Redirect"
        },
        {
          "type": "null"
        }
      ]
    },
    "scaling": {
      "anyOf": [
        {
          "$ref": "#/$defs/AppScalingConfigV1"
        },
        {
          "type": "null"
        }
      ]
    },
    "scheduled_tasks": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/$defs/AppScheduledTask"
      }
    },
    "volumes": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/$defs/AppVolume"
      }
    }
  },
  "additionalProperties": true,
  "required": [
    "package"
  ],
  "$defs": {
    "AppConfigCapabilityInstaBootV1": {
      "description": "Enables accelerated instance boot times with startup snapshots.\n\nHow it works:\nThe Edge runtime will create a pre-initialized snapshot of apps that is\nready to serve requests\nYour app will then restore from the generated snapshot, which has the\npotential to significantly speed up cold starts.\n\nTo drive the initialization, multiple http requests can be specified.\nAll the specified requests will be sent to the app before the snapshot is\ncreated, allowing the app to pre-load files, pre initialize caches, ...",
      "type": "object",
      "properties": {
        "max_age": {
          "description": "Maximum age of snapshots.\n\nFormat: 5m, 1h, 2d, ...\n\nAfter the specified time new snapshots will be created, and the old\nones discarded.",
          "anyOf": [
            {
              "$ref": "#/$defs/PrettyDuration"
            },
            {
              "type": "null"
            }
          ]
        },
        "mode": {
          "description": "The method to use to generate the instaboot snapshot for the instance.",
          "anyOf": [
            {
              "$ref": "#/$defs/InstabootSnapshotModeV1"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "requests": {
          "description": "HTTP requests to perform during startup snapshot creation.\nApps can perform all the appropriate warmup logic in these requests.\n\nNOTE: if no requests are configured, then a single HTTP\nrequest to '/' will be performed instead.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/HttpRequest"
          }
        }
      }
    },
    "AppConfigCapabilityMapV1": {
      "description": "Restricted version of the internal `CapabilityMapV1`, with only a select\nsubset of settings.",
      "type": "object",
      "properties": {
        "instaboot": {
          "description": "Enables app bootstrapping with startup snapshots.",
          "anyOf": [
            {
              "$ref": "#/$defs/AppConfigCapabilityInstaBootV1"
            },
            {
              "type": "null"
            }
          ]
        },
        "memory": {
          "description": "Instance memory settings.",
          "anyOf": [
            {
              "$ref": "#/$defs/AppConfigCapabilityMemoryV1"
            },
            {
              "type": "null"
            }
          ]
        },
        "runtime": {
          "description": "Runtime settings.",
          "anyOf": [
            {
              "$ref": "#/$defs/AppConfigCapabilityRuntimeV1"
            },
            {
              "type": "null"
            }
          ]
        },
        "ssh": {
          "anyOf": [
            {
              "$ref": "#/$defs/CapabilitySshServerV1"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": true
    },
    "AppConfigCapabilityMemoryV1": {
      "description": "Memory capability settings.\n\nNOTE: this is kept separate from the internal `CapabilityMemoryV1` struct\nto keep the high-level app.yaml distinct from the internal App entity.",
      "type": "object",
      "properties": {
        "limit": {
          "description": "Memory limit for an instance.\n\nFormat: [digit][unit], where unit is Mb/Gb/MiB/GiB,...",
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "AppConfigCapabilityRuntimeV1": {
      "description": "Runtime capability settings.",
      "type": "object",
      "properties": {
        "async_threads": {
          "description": "Whether to enable asynchronous threads/deep sleeping.",
          "type": [
            "boolean",
            "null"
          ]
        },
        "engine": {
          "description": "Engine to use for an instance, e.g. wasmer_cranelift, wasmer_llvm, etc.",
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "AppScalingConfigV1": {
      "type": "object",
      "properties": {
        "mode": {
          "anyOf": [
            {
              "$ref": "#/$defs/AppScalingModeV1"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "AppScalingModeV1": {
      "type": "string",
      "enum": [
        "single_concurrency"
      ]
    },
    "AppScheduledTask": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "AppVolume": {
      "type": "object",
      "properties": {
        "mount": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "mount"
      ]
    },
    "CapabilitySshServerV1": {
      "description": "Configure SSH server credentials and settings.",
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Enable an SSH server.",
          "type": [
            "boolean",
            "null"
          ]
        },
        "users": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/SshUserV1"
          }
        }
      },
      "additionalProperties": true
    },
    "ExecutableJob": {
      "type": "object",
      "properties": {
        "capabilities": {
          "anyOf": [
            {
              "$ref": "#/$defs/ExecutableJobCompatibilityMapV1"
            },
            {
              "type": "null"
            }
          ]
        },
        "cli_args": {
          "description": "CLI arguments passed to the runner.\nOnly applicable for runners that accept CLI arguments.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "command": {
          "description": "The command to run. Defaults to the package's entrypoint.",
          "type": [
            "string",
            "null"
          ]
        },
        "env": {
          "description": "Environment variables.",
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        },
        "package": {
          "description": "The package that contains the command to run. Defaults to the app config's package.",
          "anyOf": [
            {
              "$ref": "#/$defs/PackageSource"
            },
            {
              "type": "null"
            }
          ]
        },
        "volumes": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/AppVolume"
          }
        }
      }
    },
    "ExecutableJobCompatibilityMapV1": {
      "type": "object",
      "properties": {
        "memory": {
          "description": "Instance memory settings.",
          "anyOf": [
            {
              "$ref": "#/$defs/AppConfigCapabilityMemoryV1"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": true
    },
    "HealthCheckHttpV1": {
      "description": "Health check configuration for http endpoints.",
      "type": "object",
      "properties": {
        "body": {
          "description": "Request body as a string.",
          "type": [
            "string",
            "null"
          ]
        },
        "expect": {
          "anyOf": [
            {
              "$ref": "#/$defs/HttpRequestExpect"
            },
            {
              "type": "null"
            }
          ]
        },
        "headers": {
          "description": "HTTP headers added to the request.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/HttpHeader"
          }
        },
        "healthy_threshold": {
          "description": "Number of retries before the health check is considered healthy again.\n\nDefaults to 1.",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0
        },
        "interval": {
          "description": "Interval for the health check.\n\nFormat: 1s, 5m, 11h, ...\n\nDefaults to 60s.",
          "type": [
            "string",
            "null"
          ]
        },
        "method": {
          "description": "HTTP method.\n\nDefaults to GET.",
          "type": [
            "string",
            "null"
          ]
        },
        "path": {
          "description": "Request path.",
          "type": "string"
        },
        "timeout": {
          "description": "Request timeout.\n\nFormat: 1s, 5m, 11h, ...",
          "anyOf": [
            {
              "$ref": "#/$defs/PrettyDuration"
            },
            {
              "type": "null"
            }
          ]
        },
        "unhealthy_threshold": {
          "description": "Number of retries before the health check is considered unhealthy.\n\nDefaults to 1.",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0
        }
      },
      "required": [
        "path"
      ]
    },
    "HealthCheckV1": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "http": {
              "$ref": "#/$defs/HealthCheckHttpV1"
            }
          },
          "additionalProperties": false,
          "required": [
            "http"
          ]
        }
      ]
    },
    "HttpHeader": {
      "description": "Definition for an HTTP header.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "value"
      ]
    },
    "HttpRequest": {
      "description": "Defines an HTTP request.",
      "type": "object",
      "properties": {
        "body": {
          "description": "Request body as a string.",
          "type": [
            "string",
            "null"
          ]
        },
        "expect": {
          "anyOf": [
            {
              "$ref": "#/$defs/HttpRequestExpect"
            },
            {
              "type": "null"
            }
          ]
        },
        "headers": {
          "description": "HTTP headers added to the request.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/HttpHeader"
          }
        },
        "method": {
          "description": "HTTP method.\n\nDefaults to GET.",
          "type": [
            "string",
            "null"
          ]
        },
        "path": {
          "description": "Request path.",
          "type": "string"
        },
        "timeout": {
          "description": "Request timeout.\n\nFormat: 1s, 5m, 11h, ...",
          "anyOf": [
            {
              "$ref": "#/$defs/PrettyDuration"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "path"
      ]
    },
    "HttpRequestExpect": {
      "description": "Validation checks for an [`HttpRequest`].",
      "type": "object",
      "properties": {
        "body_includes": {
          "description": "Text that must be present in the response body.",
          "type": [
            "string",
            "null"
          ]
        },
        "body_regex": {
          "description": "Regular expression that must match against the response body.",
          "type": [
            "string",
            "null"
          ]
        },
        "status_codes": {
          "description": "Expected HTTP status codes.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "integer",
            "format": "uint16",
            "maximum": 65535,
            "minimum": 0
          }
        }
      }
    },
    "InstabootSnapshotModeV1": {
      "description": "How will an instance be bootstrapped?",
      "oneOf": [
        {
          "description": "Start the instance without any snapshot triggers. Once the requests are done,\nuse `wasmer_wasix::WasiProcess::snapshot_and_stop` to capture a snapshot\nand shut the instance down.",
          "type": "string",
          "const": "bootstrap"
        },
        {
          "description": "Explicitly enable the given snapshot triggers before starting the instance.\nThe instance's process will have its stop_running_after_checkpoint flag set,\nso the first snapshot will cause the instance to shut down.",
          "type": "object",
          "properties": {
            "triggers": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/SnapshotTrigger"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "triggers"
          ]
        }
      ]
    },
    "Job": {
      "description": "Job configuration.",
      "type": "object",
      "properties": {
        "action": {
          "$ref": "#/$defs/JobAction"
        },
        "jitter_percent_max": {
          "description": "Maximum percent of \"jitter\" to introduce between invocations.\n\nValue range: 0-100\n\nJitter is used to spread out jobs over time.\nThe calculation works by multiplying the time between invocations\nby a random amount, and taking the percentage of that random amount.\n\nSee also [`Self::jitter_percent_min`] to set a minimum jitter.",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint8",
          "maximum": 255,
          "minimum": 0
        },
        "jitter_percent_min": {
          "description": "Minimum \"jitter\" to introduce between invocations.\n\nValue range: 0-100\n\nJitter is used to spread out jobs over time.\nThe calculation works by multiplying the time between invocations\nby a random amount, and taking the percentage of that random amount.\n\nIf not specified while `jitter_percent_max` is, it will default to 10%.\n\nSee also [`Self::jitter_percent_max`] to set a maximum jitter.",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint8",
          "maximum": 255,
          "minimum": 0
        },
        "max_schedule_drift": {
          "description": "Don't start job if past the due time by this amount,\ninstead opting to wait for the next instance of it\nto be triggered.",
          "anyOf": [
            {
              "$ref": "#/$defs/PrettyDuration"
            },
            {
              "type": "null"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "retries": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0
        },
        "timeout": {
          "anyOf": [
            {
              "$ref": "#/$defs/PrettyDuration"
            },
            {
              "type": "null"
            }
          ]
        },
        "trigger": {
          "$ref": "#/$defs/JobTrigger"
        }
      },
      "additionalProperties": true,
      "required": [
        "name",
        "trigger",
        "action"
      ]
    },
    "JobAction": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "fetch": {
              "$ref": "#/$defs/HttpRequest"
            }
          },
          "required": [
            "fetch"
          ]
        },
        {
          "type": "object",
          "properties": {
            "execute": {
              "$ref": "#/$defs/ExecutableJob"
            }
          },
          "required": [
            "execute"
          ]
        }
      ]
    },
    "JobTrigger": {
      "type": "string"
    },
    "Locality": {
      "type": "object",
      "properties": {
        "regions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "regions"
      ]
    },
    "PackageSource": {
      "type": "string"
    },
    "PasswordV1": {
      "oneOf": [
        {
          "description": "Plain text password.",
          "type": "object",
          "properties": {
            "password": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "const": "plain"
            }
          },
          "required": [
            "type",
            "password"
          ]
        },
        {
          "description": "Bcrypt password hash.",
          "type": "object",
          "properties": {
            "hash": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "const": "bcrypt"
            }
          },
          "required": [
            "type",
            "hash"
          ]
        }
      ]
    },
    "PrettyDuration": {
      "type": "string"
    },
    "Redirect": {
      "description": "App redirect configuration.",
      "type": "object",
      "properties": {
        "force_https": {
          "description": "Force https by redirecting http requests to https automatically.",
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "SnapshotTrigger": {
      "type": "string"
    },
    "SshUserV1": {
      "type": "object",
      "properties": {
        "authorized_keys": {
          "description": "SSH public keys for this user.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "passwords": {
          "description": "Passwords for this user.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/PasswordV1"
          }
        },
        "username": {
          "description": "The username used for SSH login.",
          "type": "string"
        }
      },
      "additionalProperties": true,
      "required": [
        "username"
      ]
    }
  }
}